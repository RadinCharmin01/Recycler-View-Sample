<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp">


    <ImageView android:layout_height="100dp" android:layout_width="100dp" app:srcCompat="@drawable/food1" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/item_img_main"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/item_img_main" android:id="@+id/item_txt_subject" app:layout_constraintStart_toEndOf="@+id/item_img_main" android:textSize="18sp" android:textColor="?attr/colorOnPrimary" android:text="Fusha Asian" />

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="8dp" android:layout_marginStart="8dp" android:id="@+id/item_txt_city" app:layout_constraintStart_toEndOf="@+id/item_img_main" android:text="Asian, Sushi" app:layout_constraintTop_toBottomOf="@+id/item_txt_subject"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="4dp" android:layout_marginStart="8dp" android:id="@+id/item_txt_price" app:layout_constraintStart_toEndOf="@+id/item_img_main" android:text="$12 vip" app:layout_constraintTop_toBottomOf="@+id/item_txt_city"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="4dp" android:layout_marginStart="8dp" android:id="@+id/item_txt_distance" app:layout_constraintStart_toEndOf="@+id/item_img_main" android:text="1.2 miles from you" app:layout_constraintTop_toBottomOf="@+id/item_txt_price"/>

    <RatingBar android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginBottom="16dp" android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/item_rating_main" app:layout_constraintEnd_toEndOf="parent" style="@style/Widget.AppCompat.RatingBar.Small" android:rating="2.5" android:progressTint="@color/yellow"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="4dp" app:layout_constraintStart_toStartOf="@+id/item_rating_main" android:id="@+id/item_txt_rating" android:textSize="12sp" android:text="(90 Ratings)" app:layout_constraintTop_toBottomOf="@+id/item_rating_main" app:layout_constraintEnd_toEndOf="@+id/item_rating_main"/>
</androidx.constraintlayout.widget.ConstraintLayout>